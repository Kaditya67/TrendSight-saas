DEBUG=1
PYTHON_VERSION=3.10
DOMAIN="localhost"

# Django settings
ALLOWED_HOSTS=".vercel.app, .up.railway.app, localhost, 127.0.0.1"
ALLOWED_CORS="*"

SECRET_KEY="your-secret-key-here"
PORD_SECRET_KEY="your-production-secret-key-here"

# Django superuser (optional for automated creation)
DJANGO_SUPERUSER_EMAIL="admin@example.com"
DJANGO_SUPERUSER_PASSWORD="supersecurepassword"

# Email configuration
EMAIL_HOST="smtpout.server.net"
EMAIL_HOST_USER="your-email@example.com"
EMAIL_HOST_PASSWORD="your-email-password"

# PostgreSQL database configuration
POSTGRES_DATABASE="mydatabase"
POSTGRES_USER="myuser"
POSTGRES_PASSWORD="mypassword"
POSTGRES_HOST="localhost"
POSTGRES_URL="postgres://myuser:mypassword@localhost:5432/mydatabase"

# Firebase settings
PROJECT_ID="my-firebase-project-id"
BUCKET_NAME="my-firebase-project.appspot.com"
FIREBASE_CRED_PATH="project/firebase-cred.json"
FIREBASE_ENCODED="your-firebase-encoded-credentials"

# Cloud platform
CLOUD_PLATFORM="VERCEL"

# Google Analytics
GOOGLE_ANALYTICS="G-XXXXXXXXXX"
